Wetstamp.DEFAULTS =
    class: "bottom right"
    rotate: 0
    transparency: 0.25
    position: <%= Magick::SouthEastGravity.to_i %>
    tiled: false

class Wetstamp.StampPreset

  constructor: (el) ->
    @el = el
    {@class, @rotate, @transparency, @position, @tiled, @translate} = $.extend( {}, Wetstamp.DEFAULTS, @el.data() );
    
    @el.on "click", () =>
      @applyToForm()
      Wetstamp.stamp.setClass(@class)
      Wetstamp.stamp.setStyle(@style())
    @

  applyToForm: =>
    $("input[name='stamp[rotate]']").val(@rotate)
    $("input[name='stamp[transparency]']").val(@transparency)
    $("input[name='stamp[position]']").val(@position)
    $("input[name='stamp[tiled]']").prop("checked", @tiled)
    @

  style: =>
    "opacity: "+@transparency+";"

class Wetstamp.Stamp

  constructor: (json) ->
    @id = json.id
    @url = json.image.url
    @el = $("#watermark")
    @redraw()
    @style = ""
    @class = ""
    @

  urlObject: =>
    obj = document.createElement('a')
    obj.href = @url
    obj

  fileName: =>
    pathArr = @urlObject().pathname.split('/')
    pathArr[pathArr.length - 1]

  setClass: (klass) =>
    @klass = klass
    @redraw()

  setStyle: (style) =>
    @style = style
    @redraw()

  redraw: =>
    @el.html("<img src='"+@url+"' alt='"+@fileName()+"' class='"+@klass+"' style='"+@style+"'/>")

$(document).ready ->

  Wetstamp.STAMP_PRESETS = []
  for presetLink in $("a[data-role='watermark-preset']")
    preset = new Wetstamp.StampPreset($(presetLink))
    Wetstamp.STAMP_PRESETS.push preset
  
